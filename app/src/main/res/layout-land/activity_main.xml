<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".MainActivity">
    <EditText
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:focusableInTouchMode="false"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="viewEnd" tools:text="12345" android:textColor="@color/white"
            android:textSize="24sp"/>
    <TextView
            android:background="@color/grey"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:id="@+id/operation"
            android:textStyle="bold" android:textSize="30sp"
            tools:text="+"
            android:textColor="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/newNumber" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/newNumber" android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <EditText
            android:background="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            tools:text="12345" android:textAlignment="viewEnd" android:textColor="@color/white"
            android:textSize="24sp"/>
    <Button
            android:text="0"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="226dp"
            android:id="@+id/button0"
            android:minWidth="48dp"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintBaseline_toBaselineOf="@+id/button4"
    />
    <Button
            android:text="1"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button1"
            android:minWidth="48dp"
            app:layout_constraintStart_toStartOf="@+id/button6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" android:textSize="18sp"/>
    <Button
            android:text="2"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button2"
            android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintBaseline_toBaselineOf="@+id/button1" android:textSize="18sp"/>
    <Button
            android:text="3"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button3"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="8dp" android:textSize="18sp"/>
    <Button
            android:text="4"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button4"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginEnd="8dp" android:textSize="18sp"/>
    <Button
            android:text="5"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button5"
            android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/button8"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6" android:textSize="18sp"/>
    <Button
            android:text="6"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button6"
            android:minWidth="48dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            app:layout_constraintStart_toStartOf="@+id/button9" android:textSize="18sp"/>
    <Button
            android:text="7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button7"
            android:minWidth="48dp"
            android:background="@color/whiteback"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/button8"
            android:layout_marginEnd="8dp" android:textSize="18sp"/>
    <Button
            android:text="8"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button8"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" app:layout_constraintEnd_toStartOf="@+id/button9"
            android:layout_marginEnd="8dp" android:textSize="18sp"/>
    <Button
            android:text="9"
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/button9"
            android:minWidth="48dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/result"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/newNumber"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result" android:textSize="18sp"/>
    <Button
            android:text="."
            android:background="@color/whiteback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonDot"
            android:minWidth="48dp"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button9" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="="
            android:background="@color/orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonEquals"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiply"
            app:layout_constraintStart_toEndOf="@+id/buttonMultiply" android:layout_marginStart="8dp"
            android:textSize="18sp"/>
    <Button
            android:text="+"
            android:background="@color/orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonPlus"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonMinus"
            app:layout_constraintStart_toEndOf="@+id/buttonMinus" android:layout_marginStart="8dp"
            android:textSize="18sp"/>
    <Button
            android:text="-"
            android:background="@color/orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonMinus"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button1" app:layout_constraintStart_toEndOf="@+id/button1"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <Button
            android:text="*"
            android:background="@color/orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonMultiply"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <Button
            android:text="/"
            android:background="@color/orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonDivide"
            android:minWidth="48dp"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
            app:layout_constraintStart_toEndOf="@+id/buttonDot" android:layout_marginStart="8dp"
    />
    <Button
            android:text="Neg"
            android:background="@color/orange"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/buttonNegitive"
            android:minWidth="48dp"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivide"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide" android:layout_marginStart="8dp"/>
    <Button
            android:background="@color/orange"
            android:text="AC"
            android:layout_width="70dp"
            android:layout_height="147dp"
            android:id="@+id/AC"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonNegitive"
            app:layout_constraintEnd_toEndOf="@+id/buttonNegitive"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>