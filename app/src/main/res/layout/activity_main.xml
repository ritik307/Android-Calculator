<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="265dp"
            android:layout_height="150dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/result"
            android:focusableInTouchMode="false"
            android:background="@color/grey"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white" android:textSize="24sp" tools:text="12345"
            android:textAlignment="viewEnd" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
    />
    <Button
            android:text="0"
            android:layout_width="247dp"
            android:layout_height="30pt"
            android:id="@+id/button0"
            android:minWidth="48dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonDot"
            android:layout_marginEnd="4dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDot"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/whiteback"/>
    <Button
            android:text="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button1"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonPlus"
            app:layout_constraintEnd_toStartOf="@+id/buttonPlus" android:layout_marginEnd="4dp"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/whiteback"/>
    <Button
            android:text="2"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button2"
            android:minWidth="48dp"
            app:layout_constraintEnd_toStartOf="@+id/button1"
            android:layout_marginEnd="4dp" app:layout_constraintBaseline_toBaselineOf="@+id/button1"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/whiteback"/>
    <Button
            android:text="3"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button3"
            android:minWidth="48dp"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="4dp" app:layout_constraintBaseline_toBaselineOf="@+id/button2"
            android:textSize="18sp" android:textStyle="bold"
            android:background="@color/whiteback"
    />
    <Button
            android:text="4"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button4"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonMinus"
            app:layout_constraintEnd_toStartOf="@+id/buttonMinus" android:layout_marginEnd="4dp"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/whiteback"/>
    <Button
            android:text="5"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button5"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button4"
            android:layout_marginEnd="4dp" android:textSize="18sp" android:textStyle="bold"
            android:background="@color/whiteback"/>
    <Button
            android:text="6"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button6"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button5"
            android:layout_marginEnd="4dp"
            android:textSize="18sp" android:textStyle="bold"
            android:background="@color/whiteback"
    />
    <Button
            android:text="7"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button7"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonMultiply"
            app:layout_constraintEnd_toStartOf="@+id/buttonMultiply" android:layout_marginEnd="4dp"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/whiteback"/>
    <Button
            android:text="8"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button8"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button7" app:layout_constraintEnd_toStartOf="@+id/button7"
            android:layout_marginEnd="4dp" android:textSize="18sp" android:textStyle="bold"
            android:background="@color/whiteback"/>
    <Button
            android:text="9"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/button9"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/button8"
            android:layout_marginEnd="4dp"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/whiteback"
    />
    <Button
            android:text="."
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/buttonDot"
            android:minWidth="48dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonEquals"
            app:layout_constraintEnd_toStartOf="@+id/buttonEquals" android:layout_marginEnd="4dp"
            android:textStyle="bold" android:textSize="18sp" android:background="@color/whiteback"/>
    <Button
            android:text="="
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/buttonEquals"
            android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonPlus"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
            android:textStyle="bold" android:textSize="18sp" android:background="@color/orange"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="+"
            android:layout_width="170dp"
            android:layout_height="30pt"
            android:id="@+id/buttonPlus"
            android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonMinus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonMinus" android:textSize="18sp" android:textStyle="bold"
            android:background="@color/orange" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonDot"/>
    <Button
            android:text="-"
            android:layout_width="170dp"
            android:layout_height="30pt"
            android:id="@+id/buttonMinus"
            android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonMultiply"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"
            android:textStyle="bold" android:textSize="18sp" android:background="@color/orange"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <Button
            android:text="*"
            android:layout_width="170dp"
            android:layout_height="30pt"
            android:id="@+id/buttonMultiply"
            android:minWidth="48dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonDivide"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/orange"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="/"
            android:layout_width="170dp"
            android:layout_height="30pt"
            android:id="@+id/buttonDivide"
            android:minWidth="48dp"
            android:textSize="18sp" android:textStyle="bold"
            android:background="@color/orange"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newNumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button7"/>
    <TextView
            android:background="@color/grey"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/operation"
            android:textStyle="bold" android:textSize="36sp"
            tools:text="+"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textColor="@color/white" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/newNumber"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/result"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/newNumber"
            android:background="@color/grey"
            android:textColor="@color/white" tools:text="12345" android:textSize="30sp"
            android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false" android:textStyle="bold"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"/>
    <Button
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:id="@+id/buttonNegitive"
            android:minWidth="48dp" android:text="Neg"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDivide"
            app:layout_constraintEnd_toStartOf="@+id/buttonDivide" android:layout_marginEnd="4dp"
            android:textSize="18sp" android:textStyle="bold" android:background="@color/orange"/>
    <Button
            android:text="AC"
            android:layout_width="140dp"
            android:layout_height="30pt"
            android:id="@+id/AC"
            android:textStyle="bold" android:textSize="18sp"
            android:background="@color/orange"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonNegitive" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonNegitive"
    />
</android.support.constraint.ConstraintLayout>